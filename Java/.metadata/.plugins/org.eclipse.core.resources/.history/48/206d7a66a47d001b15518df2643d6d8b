package eu.senla.application.microservice.facade;

import eu.senla.application.microservice.services.ResetService;
import eu.senla.application.microservice.services.StartService;
import eu.senla.application.microservice.services.StopService;

public class MicroServiceFacade {
	
	StartService startService;
	StopService stopService;
	ResetService resetService;
	
	public MicroServiceFacade(StartService startService, StopService stopService, ResetService resetService) {
		this.startService = startService;
		this.stopService = stopService;
		this.resetService = resetService;
	}

	public void start() {
		startService.start();
	}
	
	public void stop() {
		stopService.stop();
	}
	
	public void reset() {
		resetService.reset();
	}
	
	
}
